@import "/static/css/vendor.wxss";

.index-warp {
  font-size: .7rem;
  margin: auto;
}
.index-warp .tit,
.index-warp .footer,
.index-warp .search,
.index-warp .instructions,
.index-warp .result-panel {
  max-width: 1500rpx;
  margin: auto;
}
.index-warp .tit {
  font-size: .8rem;
  color: #dd4814;
  padding: 1rem;
  text-align: center;
}
.index-warp .search {
  background: #ffffff;
  padding: 1rem 0;
  padding: 1rem;
  font-size: .7rem;
}
.index-warp .search .search-panel .search-input {
  height: 2rem;
  width: 100%;
  border: none;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding-left: .5rem;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  font-size: .8rem;
  display: block;
}
.index-warp .search .btn-panel {
  padding-top: 1rem;
  text-align: left;
}
.index-warp .search .btn-panel .search-btn {
  background: #ff6600;
  color: #ffffff;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
  font-size: .8rem;
}
.index-warp .instructions {
  font-size: .7rem;
  background: #ffffff;
  padding: 1rem 1rem 2rem 1rem;
}
.index-warp .instructions .content {
  /*white-space: pre-wrap;
      word-break: break-all;*/
}
.index-warp .instructions .content ol {
  margin: 0;
  line-height: 1.5;
}
.index-warp .footer {
  padding: 2rem 1rem;
  text-align: center;
  font-size: .7rem;
}
.index-warp .result-panel {
  background: #ffffff;
  padding: 1rem;
}
.index-warp .result-panel table {
  background: #ffffff;
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
}
.index-warp .result-panel table td,
.index-warp .result-panel table th {
  border-top: 2rpx solid #dddddd;
  padding: .5rem .5rem;
  vertical-align: top;
}
.index-warp .result-panel table td ul,
.index-warp .result-panel table th ul {
  margin: 0;
  padding: 0;
  padding-left: 1rem;
}
.index-warp .result-panel table td ul li,
.index-warp .result-panel table th ul li {
  list-style: disc;
}
.index-warp .result-panel table th {
  text-align: left;
}
.index-warp .result-panel .result-btn-panel {
  text-align: center;
  padding: 2rem 1rem 0rem 1rem;
}
.index-warp .result-panel .result-btn-panel .back {
  background: #ff6600;
  color: #ffffff;
  margin-right: 1rem;
}
.index-warp .result-panel .result-btn-panel .feedback {
  background: #aea79f;
  color: #ffffff;
}
.index-warp .table {
  border-right: 0;
  border-bottom: 0;
  width: 98%;
}
.index-warp .tr {
  width: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  border-bottom: 2rpx solid #dadada;
}
.index-warp .tr:first-child {
  border-top: 2rpx solid #dadada;
}
.index-warp .tr:last-child {
  border-bottom: none;
}
.index-warp .th,
.index-warp .td {
  padding: 20rpx;
  text-align: left;
  width: 100%;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.index-warp .th {
  font-weight: 400;
  text-align: left;
  font-weight: bold;
}
.index-warp .spot {
  display: inline-block;
  border-radius: 50%;
  width: 8rpx;
  height: 8rpx;
  margin-right: 10rpx;
  background: #333;
  vertical-align: middle;
}
.index-warp .flexdiv {
  -webkit-box-flex: 2;
  -ms-flex: 2;
  flex: 2;
}